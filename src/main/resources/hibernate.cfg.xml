<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
  <property name="connection.url">jdbc:mysql://localhost/estanciashibernate_moises_abreu?serverTimezone=UTC</property>
  <property name="connection.username">root</property>
  <property name="connection.password"/>
  <property name="hibernate.default_schema">hibernate</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
  <property name="hibernate.show_sql">true</property>
  <property name="hibernate.format_sql">true</property>
  <property name="hibernate.hbm2ddl.auto">update</property>
  <mapping class="com.moimah.entities.Estancias"/>
  <mapping class="com.moimah.entities.Estudiantes"/>
  <mapping class="com.moimah.entities.Residenciasobservaciones"/>
  <mapping class="com.moimah.entities.Universidades"/>
  <mapping class="com.moimah.entities.Residencias"/>
  <!-- Aqui aÃ±adir los mapeos -->
 </session-factory>
</hibernate-configuration>
